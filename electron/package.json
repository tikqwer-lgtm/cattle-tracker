{
  "name": "cattle-tracker-desktop",
  "version": "1.1.1",
  "description": "Desktop wrapper for Cattle Tracker",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "pack": "node copy-web.js && electron-builder --dir",
    "dist": "node copy-web.js && electron-builder"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "dependencies": {
    "electron-updater": "^6.1.7"
  },
  "build": {
    "appId": "com.cattletracker.app",
    "productName": "Учёт коров",
    "directories": { "output": "dist" },
    "asarUnpack": [ "**/node_modules/electron-updater/**" ],
    "extraMetadata": { "main": "main.js" },
    "publish": {
      "provider": "github",
      "owner": "tikqwer-lgtm",
      "repo": "cattle-tracker"
    },
    "win": { "target": [{ "target": "nsis", "arch": ["x64"] }], "artifactName": "cattle-tracker-desktop-setup-${version}.${ext}" },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "mac": { "target": "dmg", "category": "public.app-category.business" },
    "linux": { "target": "AppImage" }
  }
}
